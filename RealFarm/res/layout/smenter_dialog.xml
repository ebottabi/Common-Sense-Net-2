<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/def_img" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            android:background="@drawable/bg_curved_extended" >

            <ImageView
                android:id="@+id/aggr_img_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:background="@drawable/circular_btn_normal"
                android:src="@drawable/ic_72px_harvesting1" />

            <ImageView
                android:id="@+id/aggr_img_icon2"
                android:layout_width="60dip"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin"
                android:layout_toRightOf="@+id/aggr_img_icon"
                android:src="@drawable/pic_default_plot_image" />

            <ImageButton
                android:id="@+id/aggr_img_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="2dp"
                android:background="@drawable/ic_help"
                android:src="@drawable/square_btn_transp" />

            <ImageButton
                android:id="@+id/aggr_img_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_toLeftOf="@+id/aggr_img_help"
                android:background="@drawable/ic_home"
                android:src="@drawable/square_btn_transp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/MainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/def_img"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/def_img" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square_btn_transp"
                    android:gravity="center_horizontal"
                    android:text="Enter the Soil Moisture Value"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_xlarge" />
            </TableRow>

            <TableRow
                android:id="@+id/sm_enter_tr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/def_img" >

                <!--
                <com.commonsensenet.realfarm.control.NumberPicker
                    android:id="@+id/sm_enter_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >
                </com.commonsensenet.realfarm.control.NumberPicker>
                -->
            </TableRow>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_bottom_bar" />

</RelativeLayout>