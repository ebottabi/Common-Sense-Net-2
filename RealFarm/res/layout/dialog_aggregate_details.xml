<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:id="@+id/dialog_aggregate_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:background="#CCCCCC"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/top_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </RelativeLayout>

        <ImageView
            android:id="@+id/aggr_details_img_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin"
            android:background="@drawable/circular_btn"
            android:src="@drawable/ic_help" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list_dialog_aggregate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/aggregate_details_layout_back_bar"
        android:layout_below="@+id/dialog_aggregate_header"
        android:background="@android:color/white" >
    </ListView>

    <include
        android:id="@+id/aggregate_details_layout_back_bar"
        layout="@layout/layout_back_bar" />

</RelativeLayout>